<h1><%= link_to @game.name, game_path(@game) %></h1>
<h3><%= @game_session.format_date %></h3>
<% @game_session.players.each do |player| %>
        <p>
            <%= player.name == "Current User" ? "Me" : player.name %>
            <% if @game_session.winner.include?(player) %>
                - WINNER!
            <% end %>
        </p>
<% end %>
<%= link_to "Edit Session", edit_game_game_session_path(@game, @game_session) %><br>
<%= link_to "Delete Session", game_game_session_path(@game, @game_session), method: :delete %>

