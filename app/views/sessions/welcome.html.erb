<h1>Welcome to Game-Tracker!</h1>

<% if logged_in? %>

    <%= link_to "View My Games", games_path %><br>
    <%= link_to "View My Sessions", game_sessions_path %><br><br>
    <%= button_to "Log Out", '/logout', method: :get %>

<% else %>

    <%= button_to "Log In", '/login', method: :get %>
    <%= button_to "Log In with Google", '/auth/google_oauth2', method: :get %>
    <%= button_to "Sign Up", '/signup', method: :get %>

<% end %>